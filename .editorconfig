# editorconfig
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.cpp]
indent_style = space
indent_size = 2

[*.dart]
indent_style = space
indent_size = 2

# Groovy Gradle build scripts style (build.gradle files)
[*.gradle]
indent_style = space
indent_size = 4

[*.h]
indent_style = space
indent_size = 2

# Kotlin code style according to https://developer.android.com/kotlin/style-guide
[*.{kt, kts}]
indent_size = 4
max_line_length = 100

[*.m]
indent_style = space
indent_size = 2

[*.yml]
indent_size = 2
